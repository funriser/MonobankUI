<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.ActionBar" >
    </style>

    <style name="AppCardView" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearance">@style/AppShapeAppearance</item>
    </style>

    <style name="AppShapeAppearance" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="Header" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="Button.Action" parent="">
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:background">@drawable/bg_circle_ripple</item>
    </style>

    <style name="TextAppearance.ActionDescription" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="Text.ActionDescription" parent="">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/mrg_small</item>
        <item name="android:textAppearance">@style/TextAppearance.ActionDescription</item>
        <item name="android:lines">2</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextAppearance.Regular" parent="TextAppearance.MaterialComponents.Body2">

    </style>

    <style name="TextAppearance.Title" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.Amount" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">sans-serif</item>
    </style>

</resources>
