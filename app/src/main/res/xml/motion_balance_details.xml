<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@id/start" />

    <ConstraintSet android:id="@+id/start">

        <Constraint
            android:id="@+id/tvBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/mrg_large"
            android:scaleX="1.0"
            android:scaleY="1.0"
            app:layout_constraintBottom_toTopOf="@id/btnAction1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/tvBalanceDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/mrg_large"
            android:alpha="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvBalance" />

        <Constraint
            android:id="@+id/btnAction1"
            style="@style/Button.Action"
            app:layout_constraintBottom_toTopOf="@id/tvActionDescription1"
            app:layout_constraintEnd_toEndOf="@id/tvActionDescription1"
            app:layout_constraintStart_toStartOf="@id/tvActionDescription1" />

        <Constraint
            android:id="@+id/tvActionDescription1"
            style="@style/Text.ActionDescription"
            android:layout_marginStart="@dimen/mrg_large"
            android:layout_marginTop="@dimen/mrg_small"
            android:layout_marginBottom="@dimen/mrg_vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Constraint
            android:id="@+id/btnAction2"
            style="@style/Button.Action"
            app:layout_constraintBottom_toTopOf="@id/tvActionDescription2"
            app:layout_constraintEnd_toEndOf="@id/tvActionDescription2"
            app:layout_constraintStart_toStartOf="@id/tvActionDescription2" />

        <Constraint
            android:id="@+id/tvActionDescription2"
            style="@style/Text.ActionDescription"
            android:layout_marginTop="@dimen/mrg_small"
            android:layout_marginBottom="@dimen/mrg_vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvActionDescription3"
            app:layout_constraintStart_toEndOf="@id/tvActionDescription1" />

        <Constraint
            android:id="@+id/btnAction3"
            style="@style/Button.Action"
            app:layout_constraintBottom_toTopOf="@id/tvActionDescription3"
            app:layout_constraintEnd_toEndOf="@id/tvActionDescription3"
            app:layout_constraintStart_toStartOf="@id/tvActionDescription3" />

        <Constraint
            android:id="@+id/tvActionDescription3"
            style="@style/Text.ActionDescription"
            android:layout_marginTop="@dimen/mrg_small"
            android:layout_marginEnd="@dimen/mrg_large"
            android:layout_marginBottom="@dimen/mrg_vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">

        <Constraint
            android:id="@+id/tvBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="0.7"
            android:scaleY="0.7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/tvBalanceDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvBalance" />

        <Constraint
            android:id="@+id/btnAction1"
            style="@style/Button.Action"
            android:alpha="0.0"
            android:translationY="@dimen/panel_action_translation_y"
            app:layout_constraintBottom_toTopOf="@id/tvActionDescription1"
            app:layout_constraintEnd_toEndOf="@id/tvActionDescription1"
            app:layout_constraintStart_toStartOf="@id/tvActionDescription1" />

        <Constraint
            android:id="@+id/tvActionDescription1"
            style="@style/Text.ActionDescription"
            android:layout_marginStart="@dimen/mrg_large"
            android:layout_marginTop="@dimen/mrg_small"
            android:layout_marginBottom="@dimen/mrg_vertical"
            android:alpha="0.0"
            android:translationY="@dimen/panel_action_translation_y"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Constraint
            android:id="@+id/btnAction2"
            style="@style/Button.Action"
            android:alpha="0.0"
            android:translationY="@dimen/panel_action_translation_y"
            app:layout_constraintBottom_toTopOf="@id/tvActionDescription2"
            app:layout_constraintEnd_toEndOf="@id/tvActionDescription2"
            app:layout_constraintStart_toStartOf="@id/tvActionDescription2" />

        <Constraint
            android:id="@+id/tvActionDescription2"
            style="@style/Text.ActionDescription"
            android:layout_marginTop="@dimen/mrg_small"
            android:layout_marginBottom="@dimen/mrg_vertical"
            android:alpha="0.0"
            android:translationY="@dimen/panel_action_translation_y"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvActionDescription3"
            app:layout_constraintStart_toEndOf="@id/tvActionDescription1" />

        <Constraint
            android:id="@+id/btnAction3"
            style="@style/Button.Action"
            android:alpha="0.0"
            android:translationY="@dimen/panel_action_translation_y"
            app:layout_constraintBottom_toTopOf="@id/tvActionDescription3"
            app:layout_constraintEnd_toEndOf="@id/tvActionDescription3"
            app:layout_constraintStart_toStartOf="@id/tvActionDescription3" />

        <Constraint
            android:id="@+id/tvActionDescription3"
            style="@style/Text.ActionDescription"
            android:layout_marginTop="@dimen/mrg_small"
            android:layout_marginEnd="@dimen/mrg_large"
            android:layout_marginBottom="@dimen/mrg_vertical"
            android:alpha="0.0"
            android:translationY="@dimen/panel_action_translation_y"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </ConstraintSet>

</MotionScene>